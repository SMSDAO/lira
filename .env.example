# Environment Configuration
# Copy this file to .env and fill in your values

# Network Configuration
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_CHAIN_NAME=base
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
MONAD_RPC_URL=https://rpc.monad.network

# Contract Deployment
PRIVATE_KEY=your_private_key_here
BASESCAN_API_KEY=your_basescan_api_key

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_GO_API_URL=http://localhost:8080
NEXT_PUBLIC_JAVA_API_URL=http://localhost:8081

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/lira
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lira
DB_USER=postgres
DB_PASSWORD=your_password

# WalletConnect
NEXT_PUBLIC_WALLET_CONNECT_ID=your_project_id

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# PHP Configuration
PHP_PORT=8000

# Go Configuration
GO_PORT=8080

# Java Configuration
JAVA_PORT=8081

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# AWS/Cloud (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=lira-uploads

# Admin Configuration
ADMIN_ADDRESSES=0x0000000000000000000000000000000000000000
DEV_ADDRESSES=

# Fee Configuration
DEFAULT_PROTOCOL_FEE=100
DEFAULT_CREATOR_FEE=200
DEFAULT_LAUNCH_FEE=0.01

# Quantum Oracle (Q# Runtime)
QUANTUM_SIMULATOR=true
QUANTUM_BACKEND=local

# Logging
LOG_LEVEL=info
LOG_FILE=logs/lira.log

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret

# Features Flags
ENABLE_QUANTUM_ORACLE=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_AUTO_LAUNCH=true
ENABLE_AGENT_EXECUTION=true
