# Environment Configuration for LIRA Protocol
# Copy this file to .env and fill in your values
# For Vercel deployment: Use @ placeholders (e.g., @database_url)

# =============================================================================
# NETWORK CONFIGURATION
# Public sources - safe for Vercel build (no secrets)
# =============================================================================
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_CHAIN_NAME=base

# Public RPC endpoints (free tier, production-safe)
# These are PUBLIC and can be committed - used by frontend only
NEXT_PUBLIC_RPC_BASE_MAINNET=https://mainnet.base.org
NEXT_PUBLIC_RPC_BASE_SEPOLIA=https://sepolia.base.org

# Backend RPC (can use same public endpoints or add API keys post-deployment)
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
MONAD_RPC_URL=https://rpc.monad.network

# =============================================================================
# CONTRACT DEPLOYMENT (Development Only - Never commit real keys)
# =============================================================================
PRIVATE_KEY=@private_key_placeholder
BASESCAN_API_KEY=@basescan_api_key_placeholder

# =============================================================================
# CONTRACT ADDRESSES (Deployed contracts)
# Production values will be added post-deployment
# =============================================================================
NEXT_PUBLIC_LIRA_TOKEN=@next_public_lira_token_placeholder
NEXT_PUBLIC_LIRA_REGISTRY=@next_public_lira_registry_placeholder
NEXT_PUBLIC_LIRA_PROFILE=@next_public_lira_profile_placeholder
NEXT_PUBLIC_LIRA_SOCIAL_GRAPH=@next_public_lira_social_graph_placeholder
NEXT_PUBLIC_FACTORY=@next_public_factory_placeholder
NEXT_PUBLIC_USER_FACTORY=@next_public_user_factory_placeholder
NEXT_PUBLIC_ADMIN_WALLET=@next_public_admin_wallet_placeholder

# =============================================================================
# IMPORTANT: RPC endpoints are PUBLIC and set above
# For Vercel: These are automatically used from NEXT_PUBLIC_RPC_* vars
# No need to add separate placeholders - public RPC is production-ready
# =============================================================================

# =============================================================================
# API URLS (Local Development)
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_GO_API_URL=http://localhost:8080
NEXT_PUBLIC_JAVA_API_URL=http://localhost:8081

# =============================================================================
# DATABASE (PostgreSQL)
# Production: Use @database_url for Vercel auto-injection
# =============================================================================
DATABASE_URL=@database_url_placeholder_or_postgresql://user:password@localhost:5432/lira
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lira
DB_USER=postgres
DB_PASSWORD=@db_password_placeholder

# =============================================================================
# WALLET CONNECT
# Get your Project ID from: https://cloud.walletconnect.com
# =============================================================================
NEXT_PUBLIC_WALLET_CONNECT_ID=@next_public_wallet_connect_id_placeholder

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=@jwt_secret_placeholder_min_32_chars
SESSION_SECRET=@session_secret_placeholder_min_32_chars

# =============================================================================
# BACKEND SERVICE PORTS
# =============================================================================
PHP_PORT=8000
GO_PORT=8080
JAVA_PORT=8081

# =============================================================================
# CACHING (Optional - Redis)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# CLOUD STORAGE (Optional - AWS S3)
# =============================================================================
AWS_ACCESS_KEY_ID=@aws_access_key_id_placeholder
AWS_SECRET_ACCESS_KEY=@aws_secret_access_key_placeholder
AWS_REGION=us-east-1
S3_BUCKET=lira-uploads

# =============================================================================
# ADMIN CONFIGURATION
# Comma-separated list of admin wallet addresses
# =============================================================================
ADMIN_ADDRESSES=@admin_addresses_placeholder_0x...
DEV_ADDRESSES=@dev_addresses_placeholder_optional

# =============================================================================
# FEE CONFIGURATION (Basis points: 100 = 1%)
# =============================================================================
DEFAULT_PROTOCOL_FEE=100
DEFAULT_CREATOR_FEE=200
DEFAULT_LAUNCH_FEE=0.01

# =============================================================================
# QUANTUM ORACLE (Q# Runtime)
# =============================================================================
QUANTUM_SIMULATOR=true
QUANTUM_BACKEND=local

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/lira.log

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# SECURITY & CORS
# =============================================================================
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_QUANTUM_ORACLE=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_AUTO_LAUNCH=true
ENABLE_AGENT_EXECUTION=true

# =============================================================================
# INDEXER CONFIGURATION
# =============================================================================
INDEXER_NETWORK=base-sepolia
INDEXER_POLL_INTERVAL=5000
INDEXER_BATCH_SIZE=1000
INDEXER_RETRY_ATTEMPTS=3
INDEXER_LOG_LEVEL=info
START_BLOCK_BASE_SEPOLIA=0
START_BLOCK_BASE_MAINNET=0

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================
NODE_ENV=production

